<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="skowronline.queryParam.validator"
                 class="Skowronline\QueryParamValidatorBundle\Validator\QueryParamValidator">
            <argument type="service" id="request_stack"/>
        </service>

        <service id="skowronline.queryParam.listener"
                 class="Skowronline\QueryParamValidatorBundle\EventListener\QueryParamListener">
            <argument type="service" id="annotation_reader"/>
            <argument type="service" id="skowronline.queryParam.validator"/>
            <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController"/>
        </service>
    </services>
</container>
